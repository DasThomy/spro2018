<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="swarm.swarmcomposer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_icon"
        android:label="SWARM Composer"
        android:roundIcon="@mipmap/logo_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.NotStupidStartPage"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ListCombination" />
        <activity android:name=".activity.ListProducts" />
        <activity
            android:name=".activity.ShowCombination"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".activity.ShowProduct" />
        <activity android:name=".activity.Settings" />
        <activity android:name=".activity.Login"></activity>
    </application>

</manifest>